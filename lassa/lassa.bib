@article{parmenter_small-mammal_2003,
	title = {Small-Mammal Density Estimation: A Field Comparison of Grid-Based Vs. Web-Based Density Estimators},
	volume = {73},
	rights = {© 2003 by the Ecological Society of America},
	issn = {1557-7015},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1890/0012-9615%282003%29073%5B0001%3ASMDEAF%5D2.0.CO%3B2},
