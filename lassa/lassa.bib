	author = {Mayamba, Alex and Byamungu, Robert Modest and Leirs, Herwig and Moses, Isabirye and Makundi, Rhodes H. and Kimaro, Didas N. and Massawe, Apia W. and Kifumba, David and Nakiyemba, Alice and Mdangi, Mshaka E. and Isabirye, Brian E. and Mulungu, Loth S.},
