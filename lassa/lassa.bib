	number = {3},
	journaltitle = {{PLoS} Neglected Tropical Diseases},
	shortjournal = {{PLoS} Negl Trop Dis},
	author = {Salam, Alex P. and Duvignaud, Alexandre and Jaspard, Marie and Malvy, Denis and Carroll, Miles and Tarning, Joel and Olliaro, Piero L. and Horby, Peter W.},
